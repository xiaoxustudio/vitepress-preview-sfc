{
	"name": "vitepress-preview-sfc",
	"private": true,
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"comp:dev": "pnpm run -C packages/components dev",
		"comp:dev-watch": "pnpm run -C packages/components watch",
		"core:dev-watch": "pnpm run -C packages/core watch",
		"build:core": "pnpm run -C packages/core build",
		"build:comp": "pnpm run -C packages/components build",
		"docs:dev": "pnpm build:core && pnpm build:comp && vitepress dev docs",
		"docs:dev-no-comp": "pnpm build:core && vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs",
		"prepare": "husky",
		"format": "prettier --write --config .prettierrc.json --ignore-path .prettierignore \"packages/**/*.*\" \"docs/**/*.*\""
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.14.0",
	"dependencies": {
		"@vitepress-preview-sfc/components": "workspace:./packages/components",
		"@vitepress-preview-sfc/core": "workspace:./packages/core",
		"tsdown": "^0.13.0",
		"typescript": "^5.8.3"
	},
	"peerDependencyRules": {},
	"devDependencies": {
		"@changesets/cli": "^2.29.5",
		"@types/node": "^24.1.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"vitepress": "^1.6.3"
	},
	"lint-staged": {
		"*.{js,ts,mts,md,json,css,scss,vue}": [
			"prettier --write --config .prettierrc.json --ignore-path .prettierignore",
			"git add -u"
		]
	}
}
