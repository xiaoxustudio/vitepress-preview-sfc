{
	"name": "@vitepress-preview-sfc/root",
	"version": "1.0.0",
	"description": "a plugin for vitepress to preview sfc",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/xiaoxustudio/vitepress-preview-sfc.git"
	},
	"bugs": {
		"url": "https://github.com/xiaoxustudio/vitepress-preview-sfc/issues"
	},
	"homepage": "https://github.com/xiaoxustudio/vitepress-preview-sfc#readme",
	"engines": {
		"node": ">=16.0.0"
	},
	"scripts": {
		"comp:dev": "pnpm run -C packages/components dev",
		"comp:dev-watch": "pnpm run -C packages/components watch",
		"comp:build": "pnpm run -C packages/components build",
		"core:dev-watch": "pnpm run -C packages/core watch",
		"core:build": "pnpm run -C packages/core build",
		"docs:dev": "pnpm core:build && pnpm comp:build && vitepress dev docs",
		"docs:dev-no-comp": "pnpm core:build && vitepress dev docs",
		"docs:dev-no-core": "pnpm comp:build && vitepress dev docs",
		"docs:build": "pnpm build && vitepress build docs",
		"docs:preview": "vitepress preview docs",
		"build": " pnpm run comp:build && pnpm run core:build",
		"prepare": "husky",
		"format": "prettier --write --config .prettierrc.json --ignore-path .prettierignore \"packages/**/*.*\" \"docs/**/*.*\"",
		"publish": "pnpm build && changeset publish"
	},
	"keywords": [
		"vitepress",
		"sfc",
		"preview"
	],
	"author": "xuran",
	"license": "MIT",
	"packageManager": "pnpm@10.14.0",
	"dependencies": {
		"@vitepress-preview-sfc/components": "workspace:./packages/components",
		"@vitepress-preview-sfc/core": "workspace:./packages/core",
		"tsdown": "^0.13.0",
		"typescript": "^5.8.3"
	},
	"peerDependencyRules": {},
	"devDependencies": {
		"@changesets/cli": "^2.29.5",
		"@types/node": "^24.1.0",
		"@vitejs/plugin-vue-jsx": "^5.0.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"vitepress": "^1.6.3"
	},
	"lint-staged": {
		"*.{js,ts,mts,md,json,css,scss,vue}": [
			"prettier --write --config .prettierrc.json --ignore-path .prettierignore",
			"git add -u"
		]
	}
}
